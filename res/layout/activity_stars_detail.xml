<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res/com.face.test"
    android:id="@+id/all_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/all_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10.0dip" >

        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            ripple:rv_centered="true" >

            <Button
                android:id="@+id/stars_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:text="返回" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            ripple:rv_centered="true" >

            <Button
                android:id="@+id/stars_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:text="分享" />
        </com.andexert.library.RippleView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/screen_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/button_layout"
        android:background="@drawable/all_bg"
        android:gravity="center" >

        <FrameLayout
            android:id="@+id/frame_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="10.0dip" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="20.0dip" >

                <LinearLayout
                    android:id="@+id/photo_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/local_photo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:paddingBottom="20.0dip"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/result_photo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:paddingBottom="20.0dip"
                        android:scaleType="centerCrop"
                        android:src="@drawable/loading" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/image_score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_layout"
        android:gravity="center"
        android:text="撞脸指数:100"
        android:textColor="#fff75959"
        android:textSize="30.0sp"
        android:textStyle="bold" />

</RelativeLayout>